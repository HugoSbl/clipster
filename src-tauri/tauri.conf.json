{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipster-windows",
  "version": "0.1.0",
  "identifier": "clipster-windows.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clipster",
        "width": 800,
        "height": 600, 
        "decorations": true, 
        "resizable": false, 
        "transparent": true,
        "alwaysOnTop":true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
